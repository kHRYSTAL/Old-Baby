<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme is the default theme. -->
    <style name="custom_title">
        <item name="android:background">@null</item>
    </style>

    <!--替换parent 目的是为了使用自定义Snackbar-->
    <style name="Theme" parent="AppTheme">
        <item name="android:windowTitleSize">@dimen/app_titlebar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/custom_title</item>
        <item name="android:background">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--新增属性 statusbar颜色-->
        <item name="colorPrimaryDark">@color/black</item>
        <!--新增属性 button去掉阴影-->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <!--<item name="numberPickerStyle">@style/NPWidget.Holo.Light.NumberPicker</item>-->
        <!--<item name="android:textCursorDrawable">@drawable/line_cursor</item>-->
    </style>

    <style name="title_bar">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/app_title_text_size</item>
    </style>

    <style name="INFO_RECOMMEND_MARK_TEXTVIEW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">@dimen/txt_10</item>
    </style>

</resources>
